<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.KFUEITYAPS" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/background_light</item>
        <item name="colorPrimary">@color/brand_purple</item>
        <item name="colorSecondary">@color/brand_orange</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Material 3 Hint Fix -->
        <item name="colorOnSurfaceVariant">@color/text_hint</item>
        <item name="textInputStyle">@style/AppTextInputLayout</item>
        <item name="android:textColorHint">@color/text_hint</item>
    </style>

    <style name="Theme.KFUEITYAPS" parent="Base.Theme.KFUEITYAPS" />

    <style name="CircleImageView" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedImageView" parent="">
        <item name="cornerSize">12dp</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/bg_edittext</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:drawablePadding">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="AppTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="hintTextColor">@color/text_hint</item>
        <item name="placeholderTextColor">@color/text_hint</item>
        <item name="boxStrokeColor">@color/brand_purple</item>
        <item name="hintAnimationEnabled">true</item>
    </style>

    <style name="PrimaryButtonStyle">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
    </style>
</resources>
